<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <!--android:listSelector="@drawable/contact_list_selector"-->
    <!--android:background="@drawable/list_item_background_gradient"-->

    <ImageView
        android:id="@+id/friend_portrait"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#ffa1afc5"
        />

    <TextView
        android:id="@+id/friend_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Add your friend"
        android:textColor="#FFFFFF"
        android:background="#ff686a6e"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/friend_portrait" />

    <TextView
        android:id="@+id/friend_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:background="#ffaeb0b4"
        android:layout_below="@+id/friend_name"
        android:layout_alignBottom="@+id/friend_portrait"
        android:layout_toRightOf="@+id/friend_portrait" />

</RelativeLayout>